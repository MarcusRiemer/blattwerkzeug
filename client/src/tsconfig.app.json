{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "es2017.object",
      "es2016",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "baseUrl": "",
  },
  "exclude": [
    "test.ts",
    "server.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/ngfactory",
    "entryModule": "./app/app.module#AppModule",
    "fullTemplateTypeCheck": true
  }
}
