{
  "$ref": "#/definitions/ProjectUpdateDescription",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ProjectName": {
      "description": "The name of the project. May only contain more or less friendly\ncharacters.",
      "pattern": "^[a-zA-Z0-9 \\-_\\?äöüÄÖÜß:]{4,}$",
      "type": "string"
    },
    "ProjectUpdateDescription": {
      "additionalProperties": false,
      "description": "These things can be provided when updating the project itself.",
      "properties": {
        "activeDatabase": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "indexPageId": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/ProjectName"
        },
        "preview": {
          "type": "string"
        },
        "projectUsesBlockLanguages": {
          "items": {
            "$ref": "#/definitions/ProjectUpdateUsedBlockLanguage"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "ProjectUpdateUsedBlockLanguage": {
      "anyOf": [
        {
          "additionalProperties": false,
          "properties": {
            "blockLanguageId": {
              "type": "string"
            }
          },
          "required": [
            "blockLanguageId"
          ],
          "type": "object"
        },
        {
          "additionalProperties": false,
          "properties": {
            "_destroy": {
              "type": "boolean"
            },
            "id": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "_destroy"
          ],
          "type": "object"
        }
      ]
    }
  }
}