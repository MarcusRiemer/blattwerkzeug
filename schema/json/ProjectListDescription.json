{
  "$ref": "#/definitions/ProjectListDescription",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "MultiLangString": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object"
    },
    "ProjectListDescription": {
      "additionalProperties": false,
      "description": "The properties of a project that can be queried from the\nserver when asking for all available projecs.\n\nThis is a stripped down version of all possibly\nexisting project properties that is used to list available\nprojects.",
      "properties": {
        "createdAt": {
          "type": "string"
        },
        "description": {
          "$ref": "#/definitions/MultiLangString"
        },
        "id": {
          "type": "string"
        },
        "indexPageId": {
          "type": "string"
        },
        "name": {
          "$ref": "#/definitions/ProjectName"
        },
        "preview": {
          "type": "string"
        },
        "public": {
          "type": "boolean"
        },
        "slug": {
          "$ref": "#/definitions/ProjectSlug"
        },
        "updatedAt": {
          "type": "string"
        },
        "userId": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "description"
      ],
      "type": "object"
    },
    "ProjectName": {
      "$ref": "#/definitions/MultiLangString",
      "description": "The name of the project. May only contain more or less friendly\ncharacters.",
      "pattern": "^[a-zA-Z0-9 \\-_\\?äöüÄÖÜß:]{4,}$"
    },
    "ProjectSlug": {
      "description": "The url-friendly name of the project. May only contain characters that do not\nmean any trouble in URLs.",
      "pattern": "^[a-z0-9\\-]{4,}$",
      "type": "string"
    }
  }
}