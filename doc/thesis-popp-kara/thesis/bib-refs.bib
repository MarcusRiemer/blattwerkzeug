  urldate = {2018-11-28},
  date = {1997-03-01},
  pages = {65-83},
  author = {Brusilovsky, Peter and Calabrese, Eduardo and Hvorecky, Jozef and Kouchnirenko, Anatoly and Miller, Philip}
}

