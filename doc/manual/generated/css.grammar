grammar "css" {
  node "document" {
    children "rules" ::= rule*
  }
  node "rule" {
    children "selectors" ::= selector*
    children "declarations" ::= declaration* & backgroundColor* & color*
  }
  typedef "selector" {
    "selectorType"
    "selectorClass"
    "selectorId"
    "selectorUniversal"
  }
  node "selectorType" {
    prop "value" { string }
  }
  node "selectorClass" {
    prop "value" { string }
  }
  node "selectorId" {
    prop "value" { string }
  }
  node "selectorUniversal" {
  }
  node "declaration" {
    prop "key" { string }
    prop "value" { string }
  }
  node "backgroundColor" {
    children "value" ::= exprColor
  }
  node "color" {
    children "value" ::= exprColor
  }
  node "exprColor" {
    prop "value" { string }
  }
}
